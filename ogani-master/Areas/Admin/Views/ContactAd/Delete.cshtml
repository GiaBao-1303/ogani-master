@model ogani_master.Models.ContactAd

@{
    ViewData["Title"] = "Delete Contact";
}

<div class="app-content">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="card card-danger card-outline">
                    <div class="card-header">
                        <h3 class="card-title">Delete Contact</h3>
                    </div>
                    <div class="card-body">
                        <p>Are you sure you want to delete this contact?</p>
                        <div>
                            <strong>Name:</strong> @Model.Name
                        </div>
                        <div>
                            <strong>Email:</strong> @Model.Email
                        </div>
                        <div>
                            <strong>Message:</strong> @Html.Raw(Model.Message)
                        </div>
                    </div>
                    <div class="card-footer">
                        <form method="post" asp-action="Delete" asp-route-id="@Model.ContactId">
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash-alt"></i> Yes, Delete
                            </button>
                            <a href="@Url.Action("Index", "ContactAd", new { area = "Admin" })" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Cancel
                            </a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
