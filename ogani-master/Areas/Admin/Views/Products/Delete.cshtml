@model ogani_master.Models.Product

@{
    ViewData["Title"] = "Delete";
}
<div class="container mt-3">
    <!-- Form Title -->
    <!-- Form Container -->
    <div class="row justify-content-center">
        <div class="col-md-11">
            <div class="card shadow-lg">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">Delete Products</h5>
                </div>
                <div class="card-body">
                    <form asp-area="Admin" asp-controller="Products" asp-action="Delete" method="post" class="table">

                        <input type="hidden" asp-for="PRO_ID" value="@Model.PRO_ID" />
                        <div class="text-danger"></div>

                        <!-- Avatar -->
                        <div class="form-group mb-3">
                            <label class="fw-bold">@Html.DisplayNameFor(model => model.Avatar):</label>
                            <p> <img src="@Url.Content("~/data/product/" + Model.Avatar)" alt="Product Avatar" style="max-width: 200px; max-height: 200px; border: 1px solid #ddd;" /></p>
                        </div>

                        <!-- Name -->
                        <div class="form-group mb-3">
                            <label class="fw-bold">@Html.DisplayNameFor(model => model.Name):</label>
                            <p>@Html.DisplayFor(model => model.Name)</p>
                        </div>

                        <!-- Unit -->
                        <div class="form-group mb-3">
                            <label class="fw-bold">@Html.DisplayNameFor(model => model.Unit):</label>
                            <p>@Html.DisplayFor(model => model.Unit)</p>
                        </div>

                        <!-- Price and Discount Price -->
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="fw-bold">@Html.DisplayNameFor(model => model.Price):</label>
                                <p class="text-success"><b>@Model.Price.ToString("#,0.##")</b></p>
                                @* <p class="text-success"><b>@Html.DisplayFor(model => model.Price)</b></p> *@
                            </div>
                            <div class="col-md-6">
                                <label class="fw-bold">@Html.DisplayNameFor(model => model.DiscountPrice):</label>
                                <p class="text-danger"><b>@Model.DiscountPrice.ToString("#,0.##")</b></p>
                                @* <p class="text-danger"><b>@Html.DisplayFor(model => model.DiscountPrice)</b></p> *@
                            </div>
                        </div>

                        <!-- Intro and Rate -->
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="fw-bold">@Html.DisplayNameFor(model => model.Intro):</label>
                                <p>@Html.DisplayFor(model => model.Intro)</p>
                            </div>
                            <div class="col-md-6">
                                <label class="fw-bold">@Html.DisplayNameFor(model => model.Rate):</label>
                                <p>@Html.DisplayFor(model => model.Rate)</p>
                            </div>
                        </div>

                        <!-- Description -->
                        <div class="form-group mb-3">
                            <label class="fw-bold">@Html.DisplayNameFor(model => model.Description):</label>
                            <p>@Html.DisplayFor(model => model.Description)</p>
                        </div>

                        <!-- Details -->
                        <div class="form-group mb-3">
                            <label class="fw-bold">@Html.DisplayNameFor(model => model.Details):</label>
                            <p>@Html.DisplayFor(model => model.Details)</p>
                        </div>

                        <!-- Category -->
                        <div class="form-group mb-3">
                            <label class="fw-bold">@Html.DisplayNameFor(model => model.Category):</label>
                            <p>@Html.DisplayFor(model => model.Category.Name)</p>
                        </div>

                        <!-- Created Date -->
                        <div class="form-group mb-3">
                            <label class="fw-bold">@Html.DisplayNameFor(model => model.CreatedDate):</label>
                            <p>@Html.DisplayFor(model => model.CreatedDate)</p>
                        </div>

                        <!-- Created By -->
                        <div class="form-group mb-3">
                            <label class="fw-bold">@Html.DisplayNameFor(model => model.CreatedBy):</label>
                            <p>@Html.DisplayFor(model => model.CreatedBy)</p>
                        </div>

                        <!-- Updated Date -->
                        <div class="form-group mb-3">
                            <label class="fw-bold">@Html.DisplayNameFor(model => model.UpdatedDate):</label>
                            <p>@Html.DisplayFor(model => model.UpdatedDate)</p>
                        </div>

                        <!-- Updated By -->
                        <div class="form-group mb-3">
                            <label class="fw-bold">@Html.DisplayNameFor(model => model.UpdatedBy):</label>
                            <p>@Html.DisplayFor(model => model.UpdatedBy)</p>
                        </div>

                       

                        <!-- Action Buttons -->
                        <div class="form-group text-center">
                            <button type="submit" class="btn btn-danger me-2">
                                <i class="fas fa-trash-alt"></i> Delete Product
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Back to List
                            </a>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
    @*==================================== Show IMG Products ======================================================  *@
    <script>
        window.onload = () => {
            document.getElementById("Avatar").onchange = (e) => {
                var preview = document.getElementById('imgPreview');
                var file = e.target.files[0];
                var reader  = new FileReader();

                reader.onloadend = function () {
                  preview.src = reader.result;
                }

                if (file) {
                  reader.readAsDataURL(file);
                } else {
                  preview.src = '';
                }
            };
        }
    </script>

</div>
