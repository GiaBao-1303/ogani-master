@model ogani_master.Models.Product

@{
    ViewData["Title"] = "Delete Product";
}

<div class="container mt-5">
    <!-- Card Shadow -->
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card border-0 shadow-lg">
                <div class="card-header bg-danger text-white text-center">
                    <h4 class="mb-0"><i class="fas fa-trash-alt"></i> Confirm Delete Product</h4>
                </div>
                <div class="card-body">
                    <form asp-area="Admin" asp-controller="Products" asp-action="Delete" method="post">
                        <input type="hidden" asp-for="PRO_ID" value="@Model.PRO_ID" />

                        <!-- Avatar -->
                        <div class="row mb-4">
                            <div class="col-md-4 text-center">
                                <label class="fw-bold">Product Image:</label>
                                <div class="border p-3 rounded">
                                    <img src="@Url.Content("~/data/product/" + Model.Avatar)" alt="Product Image"
                                         style="max-width: 100%; height: auto;" class="rounded shadow-sm" />
                                </div>
                            </div>

                            <!-- Product Basic Info -->
                            <div class="col-md-8">
                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <label class="fw-bold">Name:</label>
                                        <div class="border p-2 bg-light rounded text-dark">@Html.DisplayFor(model => model.Name)</div>
                                    </div>
                                    <div class="col-md-6">
                                        <label class="fw-bold">Unit:</label>
                                        <div class="text-dark border p-2 bg-light rounded">@Html.DisplayFor(model => model.Unit)</div>
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <label class="fw-bold">Price:</label>
                                        <div class="border rounded p-2 bg-light text-success fw-bold">@Model.Price.ToString("#,0.##") VND</div>
                                    </div>
                                    <div class="col-md-6">
                                        <label class="fw-bold">Discount Price:</label>
                                        <div class="text-danger fw-bold border p-2 bg-light rounded">@Model.DiscountPrice?.ToString("#,0.##") VND</div>
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <label class="fw-bold">Intro:</label>
                                        <div class="border rounded bg-light p-2">@Html.DisplayFor(model => model.Intro)</div>
                                    </div>
                                    <div class="col-md-6">
                                        <label class="fw-bold">Rating:</label>
                                        <div class="bg-light border rounded p-2">@Model.Rate / 5.0 ⭐</div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Description -->
                        <div class="row mb-3">
                            <div class="col-12">
                                <label class="fw-bold">Description:</label>
                                <div class="border rounded p-3 bg-light">
                                    @Html.Raw(Model.Description ?? "No description available.")
                                </div>
                            </div>
                        </div>

                        <!-- Details -->
                        <div class="row mb-3">
                            <div class="col-12">
                                <label class="fw-bold">Details:</label>
                                <div class="border rounded p-3 bg-light">
                                    @Html.Raw(Model.Details ?? "No details available.")
                                </div>
                            </div>
                        </div>

                        <!-- Category -->
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="fw-bold">Category:</label>
                                <div class="border rounded p-2 bg-light">
                                    @Html.DisplayFor(model => model.Category.Name)
                                </div>
                            </div>
                        </div>

                        <!-- Created and Updated Info -->
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="fw-bold">Created Date:</label>
                                <div class="border rounded p-2 bg-light">
                                    @Html.DisplayFor(model => model.CreatedDate)
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label class="fw-bold">Created By:</label>
                                <div class="border rounded p-2 bg-light">@Html.DisplayFor(model => model.CreatedBy)</div>
                            </div>
                            <div class="col-md-6">
                                <label class="fw-bold">Updated Date:</label>
                                <div class="border rounded p-2 bg-light">@Html.DisplayFor(model => model.UpdatedDate)</div>
                            </div>
                            <div class="col-md-6">
                                <label class="fw-bold">Updated By:</label>
                                <div class="border rounded p-2 bg-light">@Html.DisplayFor(model => model.UpdatedBy)</div>
                            </div>
                        </div>

                        <!-- Warning Message -->
                        <div class="alert alert-warning text-center mt-4">
                            <i class="fas fa-exclamation-triangle"></i> <strong>Are you sure you want to delete this product?</strong>
                        </div>

                        <!-- Action Buttons -->
                        <div class="text-center mt-4">
                            <button type="submit" class="btn btn-danger btn-lg me-3">
                                <i class="fas fa-trash-alt"></i> Delete Product
                            </button>
                            <a asp-action="Index" class="btn btn-secondary btn-lg">
                                <i class="fas fa-arrow-left"></i> Back to List
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
