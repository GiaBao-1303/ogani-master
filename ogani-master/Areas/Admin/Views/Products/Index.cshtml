@model IEnumerable<ogani_master.Models.Product>

@{
    ViewData["Title"] = "Index";
}
<div class="app-content">
    <!--begin::Container-->
    <div class="container-fluid">
        <!--begin::Row-->
        <div class="row">
            <div class="col-12">
                <!-- Default box -->
                <div class="card card-success card-outline">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-md">
                                <h3 class="card-title">Product List</h3>
                            </div>
                            <div class="col-md-auto">
                                <a asp-action="Create" id="btnAdd"
                                   type="button"
                                   class="btn btn-success btn-sm">
                                    <i class="fa fa-plus me-1"></i> Add Product
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="tbl" class="table table-striped table-hover">
                                <thead class="thead-light">
                                    <tr>
                                        <th>@Html.DisplayNameFor(model => model.Avatar)</th>
                                        <th>@Html.DisplayNameFor(model => model.Name)</th>
                                        <th>@Html.DisplayNameFor(model => model.Price)</th>
                                        <th>@Html.DisplayNameFor(model => model.DiscountPrice)</th>
                                        <th>@Html.DisplayNameFor(model => model.Rate)</th>
                                        <th>@Html.DisplayNameFor(model => model.UpdatedBy)</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                <img src="@Url.Content("~/data/product/" + item.Avatar)" class="img-thumbnail" style="max-width: 100px; max-height: 100px;" />
                                            </td>
                                            <td>
                                                <div>@Html.DisplayFor(modelItem => item.Name)</div>
                                            </td>
                                            <td>
                                                <div>@Html.DisplayFor(modelItem => item.Price)</div>
                                            </td>
                                            <td>
                                                <div>@Html.DisplayFor(modelItem => item.DiscountPrice)</div>
                                            </td>
                                            <td>
                                                <div>@Html.DisplayFor(modelItem => item.Rate)</div>
                                            </td>
                                            <td>
                                                <div>@Html.DisplayFor(modelItem => item.UpdatedBy)</div>
                                            </td>
                                            <td>
                                                <div class="d-flex justify-content-center">
                                                    <a asp-controller="ManagementUsers" asp-action="EditPage" asp-route-id="@item.PRO_ID" class="btn btn-sm btn-primary me-2">
                                                        <i class="fas fa-edit"></i> Edit
                                                    </a>
                                                    <a asp-controller="ManagementUsers" asp-action="DetailPage" asp-route-id="@item.PRO_ID" class="btn btn-sm btn-info">
                                                        <i class="fas fa-info-circle"></i> Details
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                
                            <script>
                                window.onload = () => {
                                    document.getElementById("Avatar").onchange = (e) => {
                                        var preview = document.getElementById('imgPreview');
                                        var file = e.target.files[0];
                                        var reader = new FileReader();

                                        reader.onloadend = function () {
                                            preview.src = reader.result;
                                        }

                                        if (file) {
                                            reader.readAsDataURL(file);
                                        } else {
                                            preview.src = '';
                                        }
                                    };
                                }
                            </script>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
