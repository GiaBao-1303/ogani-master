@model ogani_master.Models.Blog

@{
    ViewData["Title"] = "Delete Blog";
}

<h2>Are you sure you want to delete this blog?</h2>

<div class="form-group">
    <label for="Title">Title</label>
    <input type="text" class="form-control" id="Title" value="@Model.Title" readonly />
</div>

<div class="form-group">
    <label for="Content">Content</label>
    <span class="form-control" id="Content" rows="4" readonly>@Html.Raw(Model.Content)</span>
</div>

<form asp-action="Delete" method="post" asp-route-id="@Model.BlogId">
    <!-- Thêm thông tin xác nhận trước khi xóa -->
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>
