@model ogani_master.Models.Blog

<div class="container mt-3">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">Blog Details</h5>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <label for="Title">Title</label>
                        <input type="text" class="form-control" id="Title" value="@Model.Title" readonly />
                    </div>

                    <div class="form-group">
                        <label for="Content">Content</label>
                        <span class="form-control" id="Content" rows="4" readonly>@Html.Raw(Model.Content)</span>
                    </div>


                    <!-- Hiển thị ảnh nếu có -->
                    <div class="form-group">
                        <label for="Image">Image</label>
                        @if (!string.IsNullOrEmpty(Model.Image))
                        {
                            <img src="@Url.Content("~/data/blog/" + Model.Image)" class="img-fluid" alt="Blog Image" />
                        }
                        else
                        {
                            <p>No image uploaded.</p>
                        }
                    </div>

                    <div class="form-group">
                        <label for="CreatedAt">Created At</label>
                        <input type="text" class="form-control" id="CreatedAt" value="@Model.CreatedAt.ToString("yyyy-MM-dd HH:mm:ss")" readonly />
                    </div>

                    <div class="form-group">
                        <label for="UpdatedAt">Updated At</label>
                        <input type="text" class="form-control" id="UpdatedAt" value="@Model.UpdatedAt.ToString("yyyy-MM-dd HH:mm:ss")" readonly />
                    </div>

                    <div class="form-group text-center">
                        <a href="@Url.Action("Index", "BlogAd", new { area = "Admin" })" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Back to List
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
