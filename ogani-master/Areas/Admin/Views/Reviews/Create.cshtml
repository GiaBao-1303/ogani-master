@model ogani_master.Models.Review

@{
    ViewData["Title"] = "Create";
}
<div class="app-content mt-3">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card card-primary">
                    <div class="card-header">
                        <h4 class="card-title">Create New Review</h4>
                    </div>
                    <div class="card-body">
                        <form asp-area="Admin" asp-controller="Reviews" method="post" asp-action="Create">
                            <!-- Validation summary -->
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>

                            <!-- Member ID Field -->
                            <div class="form-group mb-3">
                                <label asp-for="MEM_ID" class="control-label">Member</label>
                                <select asp-for="MEM_ID" class="form-control" asp-items="ViewBag.MEM_ID">
                                    <option value="">-- Select Member --</option>
                                </select>
                                <span asp-validation-for="MEM_ID" class="text-danger"></span>
                            </div>

                            <!-- Product ID Field -->
                            <div class="form-group mb-3">
                                <label asp-for="PRO_ID" class="control-label">Product</label>
                                <select asp-for="PRO_ID" class="form-control" asp-items="ViewBag.PRO_ID">
                                    <option value="">-- Select Product --</option>
                                </select>
                                <span asp-validation-for="PRO_ID" class="text-danger"></span>
                            </div>

                            <!-- Rate Field -->
                            <div class="form-group mb-3">
                                <label asp-for="Rate" class="control-label">Rating</label>
                                <input asp-for="Rate" class="form-control" type="number" min="1" max="5" />
                                <span asp-validation-for="Rate" class="text-danger"></span>
                            </div>

                            <!-- Content Field -->
                            <div class="form-group mb-3">
                                <label asp-for="Contents" class="control-label">Review Content</label>
                                <textarea asp-for="Contents" class="form-control" rows="4" placeholder="Write your review here"></textarea>
                                <span asp-validation-for="Contents" class="text-danger"></span>
                            </div>

                            <!-- Review Date Field -->
                            <div class="form-group mb-3">
                                <label asp-for="ReviewDate" class="control-label">Review Date</label>
                                <input asp-for="ReviewDate" class="form-control" type="date" />
                                <span asp-validation-for="ReviewDate" class="text-danger"></span>
                            </div>

                            <!-- Created Date Field -->
                            @* <div class="form-group mb-3"> *@
                            @*     <label asp-for="CreatedDate" class="control-label">Created Date</label> *@
                            @*     <input asp-for="CreatedDate" class="form-control" type="date" /> *@
                            @*     <span asp-validation-for="CreatedDate" class="text-danger"></span> *@
                            @* </div> *@

                            <!-- Created By Field -->
                            <div class="form-group mb-3">
                                <label asp-for="CreatedBy" class="control-label">Created By</label>
                                <input asp-for="CreatedBy" class="form-control" placeholder="Enter creator's name" />
                                <span asp-validation-for="CreatedBy" class="text-danger"></span>
                            </div>

                            <!-- Updated Date Field -->
                            @* <div class="form-group mb-3"> *@
                            @*     <label asp-for="UpdatedDate" class="control-label">Updated Date</label> *@
                            @*     <input asp-for="UpdatedDate" class="form-control" type="date" /> *@
                            @*     <span asp-validation-for="UpdatedDate" class="text-danger"></span> *@
                            @* </div> *@

                            <!-- Updated By Field -->
                            @* <div class="form-group mb-3"> *@
                            @*     <label asp-for="UpdatedBy" class="control-label">Updated By</label> *@
                            @*     <input asp-for="UpdatedBy" class="form-control" placeholder="Enter updater's name" /> *@
                            @*     <span asp-validation-for="UpdatedBy" class="text-danger"></span> *@
                            @* </div> *@

                            <!-- Submit and Back Buttons -->
                            <div class="form-group mb-3">
                                <button type="submit" class="btn btn-success">
                                    <i class="fas fa-save me-1"></i> Save Review
                                </button>
                                <a asp-action="Index" class="btn btn-secondary">
                                    <i class="fas fa-arrow-left me-1"></i> Back to List
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

