@model IEnumerable<ogani_master.Models.Setting>

@{
    ViewData["Title"] = "Index";
}

<div class="app-content mt-3">
    <!--begin::Container-->
    <div class="container-fluid">
        <!--begin::Row-->
        <div class="row">
            <div class="col-12">
                <!-- Default box -->
                <div class="card card-success card-outline">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-md">
                                <h3 class="card-title">Setting List</h3>
                            </div>
                            <div class="col-md-auto">
                                <a asp-action="Create" id="btnAdd" type="button" class="btn btn-success">
                                    <i class="fa fa-plus me-1"></i> Add New
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="tbl" class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Name)</th>
                                        <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Value)</th>
                                        <th>@Html.DisplayNameFor(model => model.FirstOrDefault().CreatedBy)</th>
                                        <th>@Html.DisplayNameFor(model => model.FirstOrDefault().UpdatedBy)</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                            <td>@Html.DisplayFor(modelItem => item.Value)</td>
                                            <td>@Html.DisplayFor(modelItem => item.CreatedBy)</td>
                                            <td>@Html.DisplayFor(modelItem => item.UpdatedBy)</td>
                                            <td>
                                                <a asp-area="Admin" asp-controller="Settings" asp-action="Edit" asp-route-id="@item.SET_ID" class="text-warning">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <a asp-action="Details" asp-route-id="@item.SET_ID" class="text-info ms-3">
                                                    <i class="fas fa-info-circle"></i>
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@item.SET_ID" class="text-danger ms-3">
                                                    <i class="fas fa-trash-alt"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--end::Row-->
    </div>
    <!--end::Container-->
</div>
