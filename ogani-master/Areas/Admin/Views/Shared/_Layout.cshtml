@using Microsoft.AspNetCore.Http;
@using ogani_master.Helpers;
@using ogani_master.enums;

@{
    User CurrentUser = ViewBag.CurrentUser;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="title" content="AdminLTE 4 | Sidebar Mini">
    <meta name="author" content="ColorlibHQ">
    <meta name="description" content="AdminLTE is a Free Bootstrap 5 Admin Dashboard, 30 example pages using Vanilla JS.">
    <meta name="keywords" content="bootstrap 5, bootstrap, bootstrap 5 admin dashboard, bootstrap 5 dashboard, bootstrap 5 charts, bootstrap 5 calendar, bootstrap 5 datepicker, bootstrap 5 tables, bootstrap 5 datatable, vanilla js datatable, colorlibhq, colorlibhq dashboard, colorlibhq admin dashboard"><!--end::Primary Meta Tags-->

    <title>Admin Ogana Master @ViewData["Title"]</title>

    @RenderSection("Styles", false)

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@@fontsource/source-sans-3@5.0.12/index.css" />
    <link rel="stylesheet" href="~/Admin/plugins/overlayscrollbars/styles/overlayscrollbars.min.css" />
    <link rel="stylesheet" href="~/Admin/plugins/bootstrap-icons/font/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="~/Admin/plugins/font-awesome/css/all.css" />
    <link rel="stylesheet" href="~/Admin/css/adminlte.css" />
    <link rel="stylesheet" href="~/Admin/css/custom.css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" />
    <style>
       
        body .truncate {
            display: -webkit-box;
            -webkit-box-orient: vertical;
            -webkit-line-clamp: 3;
            overflow: hidden;
            margin: 0.5rem 0.5rem;
            padding: 0px !important;
        }
        .sidebar-menu .nav-item.active .nav-link {
            color: var(--lte-sidebar-hover-color) !important;
            background-color: var(--lte-sidebar-hover-bg) !important;
        }

        .user-menu .dropdown-menu {
            padding: 0;
            border: none;
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
         }

        .user-menu .nav-link img {
            object-fit: cover;
        }

        .user-menu .dropdown-item {
            transition: all 0.2s ease;
        }

        .user-menu .dropdown-item:hover {
            background-color: #f8f9fa;
            transform: translateX(3px);
        }

        .user-menu .user-header {
            background: linear-gradient(to right, #4C51BF, #6366F1);
        }

        .user-stats a:hover {
            background-color: #f8f9fa;
        }

        .hover-bg-light:hover {
            background-color: #f8f9fa !important;
        }

        .user-menu-links .dropdown-item i {
            width: 20px;
        }

        .dropdown-menu {
            animation: slideIn 0.2s ease;
        }

        keyframes slideIn {
            from {
                opacity: 0;
                transform: translateY(10px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Mobile Responsive */
        media (max-width: 768px) {
            .user-menu .dropdown-menu {
                width: calc(100vw - 2rem) !important;
                margin: 0 1rem;
            }
        }

    </style>
   
    @await RenderSectionAsync("Header", required: false)
</head>
<body class="layout-fixed sidebar-expand-lg sidebar-mini sidebar-collapse bg-body-tertiary">
    <!--begin::App Wrapper-->
    <div class="app-wrapper">
        <!--begin::Header-->
        <nav class="app-header navbar navbar-expand bg-body">
            <!--begin::Container-->
            <div class="container-fluid">
                <!--begin::Start Navbar Links-->
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" data-lte-toggle="sidebar" href="#" role="button"> 
                            <i class="bi bi-list"></i> 
                        </a> 
                    </li>
                </ul> <!--end::Start Navbar Links--> <!--begin::End Navbar Links-->
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"> <a class="nav-link" href="#" data-lte-toggle="fullscreen"> <i data-lte-icon="maximize" class="bi bi-arrows-fullscreen"></i> <i data-lte-icon="minimize" class="bi bi-fullscreen-exit" style="display: none;"></i> </a> </li> <!--end::Fullscreen Toggle--> <!--begin::User Menu Dropdown-->

                    <li class="nav-item dropdown user-menu">
                        <a href="#" class="nav-link dropdown-toggle d-flex align-items-center gap-2" data-bs-toggle="dropdown">
                            <img src="~/@CurrentUser.ProfilePictureUrl" class="user-image rounded-circle shadow" alt="User Image" width="32" height="32">
                            <span class="d-none d-md-inline fw-medium">@CurrentUser.FirstName</span>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" style="width: 300px;">
                            <!-- User Header -->
                            <li style="background: #198754 !important;" class="user-header p-3 text-center bg-primary bg-gradient">
                                <div class="position-relative mx-auto" style="width: 90px;">
                                    <img src="~/@CurrentUser.ProfilePictureUrl"
                                         class="rounded-circle border border-3 border-white shadow-sm"
                                         alt="User Image"
                                         width="90" height="90"
                                         style="object-fit: cover;">
                                </div>
                                <div class="mt-3 text-white">
                                    <h5 class="mb-1">@CurrentUser.FirstName @CurrentUser.LastName</h5>
                                    <p class="mb-0 small opacity-75">@CurrentUser.Email</p>
                                </div>
                            </li>

                            <!-- Menu Links -->
                            <li class="user-menu-links">
                                <div class="p-2">
                                    <a asp-action="ProfilePage" asp-controller="Auth" class="dropdown-item d-flex align-items-center gap-2 py-2 px-3 rounded-2 hover-bg-light">
                                        <i class="fas fa-user text-muted"></i>
                                        <span>My Profile</span>
                                    </a>
                                    <a asp-action="EditProfilePage" asp-controller="Auth" class="dropdown-item d-flex align-items-center gap-2 py-2 px-3 rounded-2 hover-bg-light">
                                        <i class="fas fa-cog text-muted"></i>
                                        <span>Edit Profile</span>
                                    </a>
                                   
                                </div>
                            </li>

                            <!-- Footer Actions -->
                            <li class="border-top">
                                <div class="d-flex justify-content-between p-2 gap-2">
                                    <a asp-action="ProfilePage" asp-controller="Auth" class="btn btn-light flex-grow-1">
                                        <i class="fas fa-user-circle me-1"></i> Profile
                                    </a>
                                    <form asp-controller="Auth" asp-action="Logout" class="flex-grow-1">
                                        <button type="submit" class="btn btn-danger w-100">
                                            <i class="fas fa-sign-out-alt me-1"></i> Sign out
                                        </button>
                                    </form>
                                </div>
                            </li>
                        </ul>
                    </li>
                </ul> <!--end::End Navbar Links-->
            </div> <!--end::Container-->
        </nav> <!--end::Header--> <!--begin::Sidebar-->

        <aside class="app-sidebar shadow" data-bs-theme="light">
            <!--begin::Sidebar Brand-->
            <div class="sidebar-brand">
                <!--begin::Brand Link--> 

                <a asp-area ="Admin" asp-controller="Home" asp-action="Index" class="brand-link">
                    <!--begin::Brand Image--> 

                    <img src="~/Admin/assets/img/AdminLTELogo.png" alt="AdminLTE Logo" class="brand-image opacity-75 shadow"> 
                    <!--end::Brand Image--> <!--begin::Brand Text--> 
                    <span class="brand-text fw-light">AdminLTE OM</span><!--end::Brand Text--> 
                    </a> <!--end::Brand Link--> 

                    </div> <!--end::Sidebar Brand--> <!--begin::Sidebar Wrapper-->
            <div class="sidebar-wrapper">
                <nav class="mt-2">
                    <!--begin::Sidebar Menu-->
                    <ul class="nav sidebar-menu flex-column" data-lte-toggle="treeview" role="menu" data-accordion="false">
                        <li class="nav-item @Html.IsParentActive([ new ControllerInfo{ action = "Index", controllerName = "Home" } ])">
                            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="nav-link">
                                <i class="nav-icon bi bi-speedometer"></i>
                                <p>
                                    Dashboard
                                </p>
                            </a>
                        </li>
                        <li class="nav-item @Html.IsParentActive([ 
                                new ControllerInfo{ action = "Index", controllerName = "Categories" },
                                new ControllerInfo{ action = "Create", controllerName = "Categories" },
                                new ControllerInfo{ action = "Details", controllerName = "Categories" },
                                new ControllerInfo{ action = "Edit", controllerName = "Categories" },
                                new ControllerInfo{ action = "Delete", controllerName = "Categories" },
                                
                            ])">
                            <a asp-area="Admin" asp-controller="Categories" asp-action="Index" class="nav-link">
                                <i class="nav-icon fa-light fa-layer-group">
                                </i>
                                <p>
                                    Category
                                </p>
                            </a>
                        </li>
                        <li class="nav-item @Html.IsActive("BlogAd", "Index")">
                            <a asp-area="Admin" asp-controller="BlogAd" asp-action="Index" class="nav-link">
                                <i class="nav-icon fa-light fa-layer-group">
                                </i>
                                <p>
                                    Blogs
                                </p>
                            </a>
                        </li>
                        <li class="nav-item @Html.IsActive("ContactAd", "Index")">

                            <a asp-area="Admin" asp-controller="ContactAd" asp-action="Index" class="nav-link">

                                <i class="nav-icon fa-light fa-layer-group">
                                </i>
                                <p>
                                    Contact
                                </p>
                            </a>
                        </li>
                        @if(CurrentUser.Role == (int)UserRole.Admin)
                        {
                            <li class="nav-item @Html.IsActive("Products", "Index")">
                                <a asp-area="Admin" asp-controller="Products" asp-action="Index" class="nav-link">
                                    <i class="nav-icon bi bi-box-seam-fill"></i>
                                    <p>
                                        Product
                                    </p>
                                </a>
                            </li>
                        }
                        <li class="nav-item @Html.IsParentActive([
                                 new ControllerInfo{ action = "Index", controllerName = "Order" },
                                 new ControllerInfo{ action = "DetailsPage", controllerName = "Order" },
                                 new ControllerInfo{ action = "DeletePage", controllerName = "Order" },
                            ])">
                            <a asp-area="Admin" asp-controller="Order" asp-action="Index" class="nav-link">
                                <i class="nav-icon bi bi-box-seam-fill"></i>
                                <p>
                                    Orders
                                </p>
                            </a>
                        </li>
                        <li class="nav-item @Html.IsActive("Banners", "Index")">
                            <a asp-area="Admin" asp-controller="Banners" asp-action="Index" class="nav-link">
                                <i class="fa-light fa-images"></i>
                                <p>
                                    Banner
                                </p>
                            </a>
                        </li>
                        <li class="nav-item @Html.IsActive("Reviews", "Index")">
                            <a asp-area="Admin" asp-controller="Reviews" asp-action="Index" class="nav-link">
                                <i class="fa-thin fa-star-sharp"></i>
                                <p>
                                    Reviews
                                </p>
                            </a>
                        </li>
                        <li class="nav-item @Html.IsActive("Menus", "Index")">
                            <a asp-area="Admin" asp-controller="Menus" asp-action="Index" class="nav-link">
                                <i class="fa-duotone fa-thin fa-bars"></i>
                                <p>
                                    Menus
                                </p>
                            </a>
                        </li>
                        <li class="nav-header">Setting</li>
                        <li class="nav-item @Html.IsActive("Settings", "Index")">
                            <a asp-area="Admin" asp-controller="Settings" asp-action="Index" class="nav-link">
                                <i class="fa-thin fa-gear"></i>
                                <p>
                                    Settings
                                </p>
                            </a>
                        </li>
                        <li class="nav-item @Html.IsParentActive([
                                new ControllerInfo{ action = "Index", controllerName = "ManagementUsers" }
                            ])">
                            <a asp-area="Admin" asp-controller="ManagementUsers" asp-action="Index" class="nav-link">
                                <i class="fa-thin fa-gear"></i>
                                <p>
                                    Management Users
                                </p>
                            </a>
                        </li>
                    </ul>
                    <!--end::Sidebar Menu-->
                </nav>
            </div>
            <!--end::Sidebar Wrapper-->
        </aside>
        <!--end::Sidebar-->
        <!--begin::App Main-->
        <main class="app-main">
            <div class="container">
                @RenderBody()
            </div>
        </main>
        <!--end::App Main-->
        <!--begin::Footer-->
        <footer class="app-footer">
            <!--begin::To the end-->
            <div class="float-end d-none d-sm-inline">Anything you want</div> <!--end::To the end--> <!--begin::Copyright--> <strong>
                Copyright &copy; 2014-2024&nbsp;
                <a href="https://adminlte.io" class="text-decoration-none">AdminLTE.io</a>.
            </strong>
            All rights reserved.
            <!--end::Copyright-->
        </footer> <!--end::Footer-->

    </div> <!--end::App Wrapper-->

    <script src="~/Admin/plugins/overlayscrollbars/browser/overlayscrollbars.browser.es6.min.js"></script>
    <script src="~/Admin/js/bootstrap.bundle.min.js"></script>
    <script src="~/Admin/js/adminlte.js"></script>
    <script src="~/Admin/plugins/jquery/jquery-3.7.1.min.js"></script>

    <script>
        //===================== begin::OverlayScrollbars Configure =====================
        const SELECTOR_SIDEBAR_WRAPPER = ".sidebar-wrapper";
        const Default = {
            scrollbarTheme: "os-theme-dark",
            scrollbarAutoHide: "leave",
            scrollbarClickScroll: true,
        };
        document.addEventListener("DOMContentLoaded", function () {
            const sidebarWrapper = document.querySelector(SELECTOR_SIDEBAR_WRAPPER);
            if (
                sidebarWrapper &&
                typeof OverlayScrollbarsGlobal?.OverlayScrollbars !== "undefined"
            ) {
                OverlayScrollbarsGlobal.OverlayScrollbars(sidebarWrapper, {
                    scrollbars: {
                        theme: Default.scrollbarTheme,
                        autoHide: Default.scrollbarAutoHide,
                        clickScroll: Default.scrollbarClickScroll,
                    },
                });
            }
        });




        //===================== end::OverlayScrollbars Configure =====================
        $(document).ready(function () {
            //================ begin::Sidebar Status =====================
            if (localStorage.getItem("SidbarStatus") == 'open') {
                $('body').removeClass('sidebar-collapse').addClass('sidebar-open');
            } else {
                $('body').removeClass('sidebar-open').addClass('sidebar-collapse');
            }

            $('a.nav-link[data-lte-toggle="sidebar"]').click(function () {
                setTimeout(function () {
                    if ($('body').hasClass('sidebar-open')) {
                        localStorage.setItem("SidbarStatus", 'open');
                    } else {
                        localStorage.setItem("SidbarStatus", 'close');
                    }
                }, 500);
            });
            //================ end::Sidebar Status =====================
        });
    </script>
   
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
