@using ogani_master.enums;

@{
    ViewData["Title"] = "Profile Page";
    User user = ViewBag.CurrentUser;
}

@section Styles {
    <style>
        .profile-container {
            max-width: 1000px;
            margin: 2rem auto;
            background: #fff;
            border-radius: 20px;
            box-shadow: 0 0 20px rgba(0,0,0,0.05);
        }

        .profile-header {
            position: relative;
        }

        .cover-photo {
            height: 200px;
            border-radius: 20px 20px 0 0;
        }

        .profile-info {
            display: flex;
            align-items: flex-end;
            padding: 0 2rem;
            transform: translateY(-80px);
            margin-bottom: -40px;
        }

        .profile-photo {
            margin-right: 2rem;
        }

        .profile-photo img {
            width: 150px;
            height: 150px;
            border-radius: 50%;
            border: 5px solid #fff;
            box-shadow: 0 0 20px rgba(0,0,0,0.1);
            object-fit: cover;
        }

        .profile-details h1 {
            margin: 0;
            color: #2d3748;
            font-size: 2rem;
        }

        .username {
            color: #718096;
            margin: 0.5rem 0;
        }

        .role-badge {
            display: inline-block;
            padding: 0.5rem 1rem;
            background: #EBF4FF;
            color: #4C51BF;
            border-radius: 20px;
            font-size: 0.875rem;
        }

        .profile-content {
            padding: 2rem;
        }

        .info-card {
            background: #fff;
            border-radius: 15px;
            padding: 2rem;
            box-shadow: 0 0 10px rgba(0,0,0,0.03);
        }

        .card-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 2rem;
        }

        .card-header h2 {
            margin: 0;
            color: #2d3748;
            font-size: 1.5rem;
        }

        .edit-btn {
            padding: 0.5rem 1rem;
            background: #4C51BF;
            color: white;
            border: none;
            border-radius: 10px;
            cursor: pointer;
            transition: background 0.3s ease;
        }

        .edit-btn:hover {
            background: #434190;
        }

        .info-group {
            display: grid;
            gap: 1.5rem;
        }

        .info-item {
            display: flex;
            align-items: center;
            padding: 1rem;
            background: #F7FAFC;
            border-radius: 10px;
            transition: transform 0.3s ease;
        }

        .info-item:hover {
            transform: translateX(5px);
        }

        .info-label {
            width: 120px;
            display: flex;
            align-items: center;
            color: #718096;
        }

        .info-label i {
            margin-right: 0.5rem;
            color: #4C51BF;
        }

        .info-value {
            flex: 1;
            color: #2d3748;
        }

        .status-badge {
            padding: 0.25rem 0.75rem;
            border-radius: 20px;
            font-size: 0.875rem;
        }

        .status-badge.active {
            background: #C6F6D5;
            color: #2F855A;
        }

        .status-badge.inactive {
            background: #FED7D7;
            color: #C53030;
        }

        media (max-width: 768px) {
            .profile-info {
                flex-direction: column;
                align-items: center;
                text-align: center;
            }

            .profile-photo {
                margin-right: 0;
                margin-bottom: 1rem;
            }

            .card-header {
                flex-direction: column;
                gap: 1rem;
            }

            .info-item {
                flex-direction: column;
                text-align: center;
            }

            .info-label {
                width: 100%;
                justify-content: center;
                margin-bottom: 0.5rem;
            }
        }
    </style>
}

<div class="profile-container">
    <div class="profile-header">
        <div class="cover-photo"></div>
        <div class="profile-info">
            <div class="profile-photo">
                <img src="@user.ProfilePictureUrl" alt="@user.UserName">
            </div>
            <div class="profile-details">
                <h1>@($"{user.FirstName} {user.LastName}")</h1>
                <p class="username">@{@user.UserName}</p>
                <div class="role-badge">
                    @((UserRole)user.Role)
                </div>
            </div>
        </div>
    </div>

    <div class="profile-content">
        <div class="info-card">
            <div class="card-header">
                <h2>Personal Information</h2>
                <a asp-controller="Auth" asp-action="EditProfilePage" class="edit-btn">
                    <i class="fas fa-edit"></i> Edit Profile
                </a>
            </div>

            <div class="info-group">
                <div class="info-item">
                    <div class="info-label">
                        <i class="fas fa-envelope"></i>
                        <span>Email</span>
                    </div>
                    <div class="info-value">@user.Email</div>
                </div>

                <div class="info-item">
                    <div class="info-label">
                        <i class="fas fa-phone"></i>
                        <span>Phone</span>
                    </div>
                    <div class="info-value">@user.Phone</div>
                </div>

                <div class="info-item">
                    <div class="info-label">
                        <i class="fas fa-venus-mars"></i>
                        <span>Gender</span>
                    </div>
                    <div class="info-value">@(user.Gender ? "Male" : "Female")</div>
                </div>

                <div class="info-item">
                    <div class="info-label">
                        <i class="fas fa-map-marker-alt"></i>
                        <span>Address</span>
                    </div>
                    <div class="info-value">@user.Address</div>
                </div>

                <div class="info-item">
                    <div class="info-label">
                        <i class="fas fa-circle"></i>
                        <span>Status</span>
                    </div>
                    <div class="info-value">
                        <span class="status-badge @(user.Status == 1 ? "active" : "inactive")">
                            @(user.Status == 1 ? "Active" : "Inactive")
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

